<div class="hero-image my-element">
  <video id="video" autoplay muted loop>
    <source src="/image/workout.mp4" type="video/mp4">
  </video>
  <div class="content_div">
    <h1 class="title_main">A Tailored Workout Recommendation</h1>
    <p class="sub_title">Achieve Your Fitness Goals with Personalized Workout Recommendations </p>
  </div>
</div>



<div id="workoutFormContainer" class="control block content my-element">
  <form id="workoutForm">
    <div class="select is-success">
      <select name="muscle" id="muscle">
        <option value="">Select targeted muscle</option>
        <option value="abdominals">Abdominals</option>
        <option value="abductors">Abductors</option>
        <option value="adductors">adductors</option>
        <option value="biceps">biceps</option>
        <option value="calves">calves</option>
        <option value="chest">Chest</option>
        <option value="forearms">forearms</option>
        <option value="glutes">glutes</option>
        <option value="hamstrings">hamstrings</option>
        <option value="lats">lats</option>
        <option value="lower_back">lower_back</option>
        <option value="middle_back">middle_back</option>
        <option value="neck">neck</option>
        <option value="quadriceps">quadriceps</option>
        <option value="traps">traps</option>
        <option value="quadriceps">triceps</option>
      </select>
    </div>
    <div class="select is-success">
      <select name="difficulty" id="difficultyLevel">
        <option value="">Select difficulty level</option>
        <option value="beginner">beginner</option>
        <option value="intermediate">intermediate</option>
        <option value="expert">expert</option>
      </select>
    </div>


    <input id="submitButton" type="submit" value="Submit" class="button is-success is-outlined"></input>
  </form>

</div>



<div id="workoutResultContainer" class="container is-fluid">
  <!-- workout data show up here -->
</div>

