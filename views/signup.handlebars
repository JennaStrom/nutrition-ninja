<div class="banner">
    <img src="/homepagebanner.jpeg" class="banner-art">
</div>
<section class="sign-up-page columns is-multiline m-3">
    <form style="text-align: center" class="form signup-form column is-one-half has-background-success-light">
           <h2 id="sign-up-text">Sign Up!</h2>
        <div class="form-group">
            <label for="username-signup">Username:</label>
            <input class="form-input" type="text" id="username-signup" name="name">
        </div>
        <div class="form-group">
            <label for="password-signup">Password:</label>
            <input class="form-input" type="password" id="password-signup" />
        </div>
        <div class="form-group">
            <label for="gender">Gender:</label>
            <select id="gender" name="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Female">I do not want to share</option>
            </select>
        </div>
        <div class="form-group">
            <label for="weight">Weight in kilograms:</label>
            <input type="number" id="weight" name="weight">
        </div>
        <div class="form-group">
            <label for="height">Height in centimeters:</label>
            <input type="number" id="height" name="height">
        </div>
        <div class="form-group">
            <label for="age">Age:</label>
            <input type="number" id="age" name="age">
        </div>
        <div class="form-group">
            <button class="button is-primary is-outlined" id="submitButton" type="submit">Submit</button>
        </div>
    </form>
</section>

<script src="/js/signup.js" type="text/javascript"></script>